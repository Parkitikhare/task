        <h1>Add Users</h1>
     <div class="container">
        <form  action="/assignTask" method="post">
            <div class="mb-3">
                <label for="Name" class="form-label"> select User</label>
                <select name="userid" class="form-select" aria-label="Default select example">
                    <%AllUser.forEach((user)=>{%>
                         <option value="<%=user._id%>"><%=user.Name%></option>
                    <%})%>
                  </select>                  
            </div>
            <div class="mb-3">
              <label for="Name" class="form-label">Task Name</label>
              <input type="text" class="form-control" name="taskname" id="Name">
            </div>
            <div class="mb-3">
                <label for="Name" class="form-label">Task Type</label>
                <select name="tasktype" class="form-select" aria-label="Default select example">
                    <option selected value="pending">pending</option>
                    <option value="done">done</option>
                  </select>
                  
            </div>
           
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
     </div>
    </div>
